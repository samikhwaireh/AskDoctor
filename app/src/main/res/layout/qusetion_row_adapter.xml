<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:background="@drawable/update_btn">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/questionAdapter_userImage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/questionAdapter_userImage"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/questionAdapter_userImage"
        android:text="UserName"
        android:textStyle="bold"
        android:id="@+id/questionAdapter_userNameTv"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/questionAdapter_userImage"
        android:text="Disease :"
        android:id="@+id/disease"/>

    <TextView
        android:id="@+id/questionAdapter_diseaseTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionAdapter_userImage"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/disease"
        android:text="disease" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question :"
        android:textStyle="bold"
        android:layout_below="@id/disease"
        android:id="@+id/qu"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="question"
        android:layout_toEndOf="@id/qu"
        android:layout_marginStart="5dp"
        android:layout_below="@id/disease"
        android:id="@+id/questionAdapter_QuestionTv"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/update_btn"
        android:layout_below="@id/questionAdapter_QuestionTv"
        android:layout_marginTop="10dp"
        android:id="@+id/questionAdapter_questionImage"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionAdapter_questionImage"
        android:layout_marginTop="5dp"
        android:background="@drawable/update_btn"
        android:text="Comment"
        android:id="@+id/questionAdapter_answerBtn"/>

</RelativeLayout>