<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.LoginActivity">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <RelativeLayout
               android:id="@+id/header"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingStart="40dp"
               android:paddingTop="50dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentTop="true"
                   android:text="Login"
                   android:textAlignment="textStart"
                   android:textDirection="firstStrong"
                   android:textSize="24sp"
                   android:textStyle="bold"
                   android:textColor="@color/colorMain"/>
           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/body"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_below="@+id/header"
               android:layout_marginVertical="30dp">
               <RelativeLayout
                   android:id="@+id/div_face_twitter"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_centerHorizontal="true">
                   <ImageButton
                       android:id="@+id/facebook_btn"
                       android:layout_width="140dp"
                       android:layout_height="50dp"
                       android:src="@drawable/facebook"
                       android:layout_margin="10dp"
                       android:background="@drawable/btn_icon"/>
                   <ImageButton
                       android:id="@+id/twitter_btn"
                       android:layout_width="140dp"
                       android:layout_height="50dp"
                       android:src="@drawable/google"
                       android:layout_margin="10dp"
                       android:layout_toEndOf="@id/facebook_btn"
                       android:background="@drawable/btn_icon"/>
               </RelativeLayout>

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingHorizontal="40dp"
                   android:layout_below="@id/div_face_twitter"
                   android:layout_marginVertical="60dp">

                   <TextView
                       android:id="@+id/lbl1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Email"
                       android:textSize="14sp"/>

                   <EditText
                       android:id="@+id/email_input"
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:layout_below="@+id/lbl1"
                       android:layout_centerHorizontal="true"
                       android:background="@drawable/input_text_box"
                       android:inputType="textEmailAddress"
                       android:textSize="20sp"
                       android:padding="5dp"/>

                   <TextView
                       android:id="@+id/lbl2"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="password"
                       android:layout_below="@id/email_input"
                       android:layout_marginTop="30dp"
                       android:textSize="14sp"/>
                   <EditText
                       android:id="@+id/password_input"
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:layout_below="@+id/lbl2"
                       android:layout_centerHorizontal="true"
                       android:background="@drawable/input_text_box"
                       android:inputType="textPassword"
                       android:textSize="20sp"
                       android:padding="5dp"/>

                   <TextView
                       android:id="@+id/forget"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Foreger Password?"
                       android:textColor="@color/colorMain"
                       android:textSize="12sp"
                       android:layout_marginVertical="19dp"
                       android:layout_alignParentEnd="true"
                       android:layout_below="@id/password_input"/>
                   <Switch
                       android:id="@+id/switcher"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@id/password_input"
                       android:layout_marginTop="15dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Remember me"
                       android:textSize="12sp"
                       android:textColor="@color/colorMain"
                       android:layout_toEndOf="@id/switcher"
                       android:layout_below="@id/password_input"
                       android:layout_marginVertical="19dp"
                       android:id="@+id/remeberTv"/>
                   <Switch
                       android:id="@+id/doctor_switcher"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@id/password_input"
                       android:layout_marginTop="15dp"
                       android:layout_centerHorizontal="true"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Doctor"
                       android:textSize="12sp"
                       android:textColor="@color/colorMain"
                       android:layout_toEndOf="@id/doctor_switcher"
                       android:layout_below="@id/password_input"
                       android:layout_marginVertical="19dp"/>

                   <Button
                       android:id="@+id/login_btn"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="login"
                       android:textColor="@color/colorMain"
                       android:background="@drawable/btn_icon"
                       android:layout_below="@id/switcher"
                       android:layout_marginTop="40dp"
                       android:layout_marginBottom="10dp"/>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@id/login_btn"
                       android:layout_centerHorizontal="true"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Don't have an account?"/>
                       <TextView
                           android:id="@+id/sign_up"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Sign up"
                           android:textColor="@color/colorMain"
                           android:textStyle="bold"
                           android:layout_marginStart="5dp"/>
                   </LinearLayout>
               </RelativeLayout>
           </RelativeLayout>
       </LinearLayout>
   </ScrollView>

</RelativeLayout>