<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#212121" >

    <EditText
        android:id="@+id/email_forget"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Type Your Email Address Here..."
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/login_txt_edit"
        />

    <Button
        android:id="@+id/submit_forget"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/email_forget"
        android:layout_marginTop="30dp"
        android:text="send"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/btn_login"
        />

    <ImageView
        android:id="@+id/backto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/back_white_arrow"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_below="@id/backto"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Type your account email address in the blank below then, you will receive a link to reset your password within a few minutes. "/>

</RelativeLayout>