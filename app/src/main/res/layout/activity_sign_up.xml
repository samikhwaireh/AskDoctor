<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.LoginActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="40dp"
        android:paddingTop="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Sign up"
            android:textAlignment="textStart"
            android:textDirection="firstStrong"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorMain"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_marginVertical="60dp">

        <RelativeLayout
            android:id="@+id/sub_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="40dp"
            android:layout_marginVertical="30dp">

            <RelativeLayout
                android:id="@+id/div_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lbl_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textSize="14sp"/>
                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:background="@drawable/input_text_box"
                    android:inputType="text"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:layout_below="@+id/lbl_name"/>
                <TextView
                    android:id="@+id/lbl_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:layout_marginStart="11dp"
                    android:layout_toEndOf="@id/first_name"
                    android:textSize="14sp"/>
                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:background="@drawable/input_text_box"
                    android:inputType="text"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/lbl_last_name"/>
            </RelativeLayout>

            <RadioGroup
                android:id="@+id/gender_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/div_info"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"/>
                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"/>
                <RadioButton
                    android:id="@+id/other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other"/>
            </RadioGroup>


            <TextView
                android:id="@+id/lbl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_below="@id/gender_radio"
                android:layout_marginTop="20dp"
                android:textSize="14sp"/>
            <EditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/lbl1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/input_text_box"
                android:inputType="textEmailAddress"
                android:textSize="20sp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/lbl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="password"
                android:layout_below="@id/email_input"
                android:layout_marginTop="20dp"
                android:textSize="14sp"/>
            <EditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/lbl2"
                android:layout_centerHorizontal="true"
                android:background="@drawable/input_text_box"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:padding="5dp"/>


            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:textColor="@color/colorMain"
                android:background="@drawable/btn_icon"
                android:layout_below="@id/password_input"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_btn"
                android:layout_centerHorizontal="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do you already have an account?"/>
                <TextView
                    android:id="@+id/sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log in"
                    android:textColor="@color/colorMain"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>